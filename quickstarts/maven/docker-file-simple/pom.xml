<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.7.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <name>Eclipse JKube :: Quickstarts :: Maven :: Dockerfile :: Simple</name>
    <groupId>org.eclipse.jkube</groupId>
    <artifactId>docker-file-simple</artifactId>
    <version>1.0.0-rc-1</version>

    <properties>
        <java.version>11</java.version>
        <jkube.enricher.jkube-service.port>8080</jkube.enricher.jkube-service.port>
        <jkube.enricher.jkube-service.type>NodePort</jkube.enricher.jkube-service.type>
        <kubernetes-maven-plugin.version>${project.version}</kubernetes-maven-plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jkube</groupId>
                <artifactId>kubernetes-maven-plugin</artifactId>
                <version>${kubernetes-maven-plugin.version}</version>
            </plugin>
        </plugins>
    </build>

</project>
