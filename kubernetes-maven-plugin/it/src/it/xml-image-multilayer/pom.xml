<project>

  <modelVersion>4.0.0</modelVersion>

  <artifactId>xml-image-multilayer</artifactId>
  <groupId>org.eclipse.jkube</groupId>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.jkube</groupId>
        <artifactId>kubernetes-maven-plugin</artifactId>
        <version>@jkube.version@</version>
        <configuration>
          <images>
            <image>
              <name>repository/xml-based-image-test:latest</name>
              <build>
                <from>alpine</from>
                <env>
                  <JAVA_OPTIONS>-Xmx256m</JAVA_OPTIONS>
                </env>
                <labels>
                  <MAINTAINER>JKube testing team</MAINTAINER>
                </labels>
                <assemblies>
                  <assembly>
                    <name>layer-1</name>
                    <targetDir>/deployments/static</targetDir>
                    <inline>
                      <fileSets>
                        <fileSet>
                          <directory>${project.directory}/src/static</directory>
                        </fileSet>
                      </fileSets>
                    </inline>
                  </assembly>
                  <assembly>
                    <name>layer-2</name>
                    <targetDir>/deployments/app</targetDir>
                    <inline>
                      <files>
                        <file>
                          <source>
                            ${project.build.directory}/${project.artifactId}-${project.version}.jar
                          </source>
                          <outputDirectory>.</outputDirectory>
                        </file>
                      </files>
                    </inline>
                  </assembly>
                </assemblies>
                <ports>
                  <port>8080</port>
                </ports>
                <entryPoint>
                  <shell>java -jar /deployments/app/${project.artifactId}-${project.version}.jar</shell>
                </entryPoint>
              </build>
            </image>
          </images>
          <resources>
            <env>
              <JAVA_OPTIONS>valueFromResourcesToBeMerged</JAVA_OPTIONS>
            </env>
          </resources>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
