<project>

  <modelVersion>4.0.0</modelVersion>

  <artifactId>xml-image-multilayer</artifactId>
  <groupId>org.eclipse.jkube</groupId>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.jkube</groupId>
        <artifactId>kubernetes-maven-plugin</artifactId>
        <version>@jkube.version@</version>
        <configuration>
          <images>
            <image>
              <name>repository/xml-based-image-test:latest</name>
              <build>
                <from>registry.access.redhat.com/ubi8/ubi-minimal:8.8-860</from>
                <env>
                  <JAVA_OPTIONS>-Xmx256m</JAVA_OPTIONS>
                </env>
                <labels>
                  <MAINTAINER>JKube testing team</MAINTAINER>
                </labels>
                <assembly>
                  <targetDir>/deployments</targetDir>
                  <excludeFinalOutputArtifact>true</excludeFinalOutputArtifact>
                  <layers>
                    <layer>
                      <id>static-files</id>
                      <fileSets>
                        <fileSet>
                          <directory>src/static</directory>
                          <outputDirectory>static</outputDirectory>
                        </fileSet>
                      </fileSets>
                    </layer>
                    <layer>
                      <id>artifact</id>
                      <files>
                        <file>
                          <source>
                            ${project.build.directory}/${project.artifactId}-${project.version}.jar
                          </source>
                          <outputDirectory>.</outputDirectory>
                        </file>
                      </files>
                    </layer>
                  </layers>
                </assembly>
                <ports>
                  <port>8080</port>
                </ports>
                <entryPoint>
                  <shell>java -jar /deployments/${project.artifactId}-${project.version}.jar</shell>
                </entryPoint>
              </build>
            </image>
            <image>
              <name>other/simple-image-test:latest</name>
              <build>
                <from>registry.access.redhat.com/ubi8/ubi-minimal:8.8-860</from>
                <assembly>
                  <name>custom-name</name>
                  <targetDir>/opt/deployments</targetDir>
                  <inline>
                    <fileSets>
                      <fileSet>
                        <directory>src/static</directory>
                        <outputDirectory>static</outputDirectory>
                      </fileSet>
                    </fileSets>
                  </inline>
                </assembly>
                <ports>
                  <port>8082</port>
                </ports>
                <entryPoint>
                  <shell>java -jar /opt/deployments/${project.artifactId}-${project.version}.jar</shell>
                </entryPoint>
              </build>
            </image>
          </images>
          <resources>
            <env>
              <JAVA_OPTIONS>valueFromResourcesToBeMerged</JAVA_OPTIONS>
            </env>
          </resources>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
