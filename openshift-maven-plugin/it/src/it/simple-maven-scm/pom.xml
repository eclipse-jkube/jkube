<project>

  <modelVersion>4.0.0</modelVersion>

  <artifactId>jkube-maven-sample-zero-config</artifactId>
  <groupId>org.eclipse.jkube</groupId>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.7.17</version>
  </parent>

  <scm>
    <connection>scm:git:git://github.com/jkubeio/openshift-maven-plugin.git</connection>
    <developerConnection>scm:git:git://github.com/jkubeio/openshift-maven-plugin.git</developerConnection>
    <url>git://github.com/jkubeio/openshift-maven-plugin.git</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
  </dependencies>

  <build>

    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.eclipse.jkube</groupId>
        <artifactId>openshift-maven-plugin</artifactId>
        <version>@jkube.version@</version>
      </plugin>

    </plugins>
  </build>

</project>
